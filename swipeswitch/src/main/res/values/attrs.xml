<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SwipeSwitch">
        <attr name="backgroundColor" format="string"/>
        <attr name="pillColor" format="string"/>
        <attr name="pillDrawable" format="reference"/>
        <attr name="pillDrawableTint" format="string"/>
        <attr name="pillImageDimen" format="integer"/>
        <attr name="pillOffset" format="float"/>
        <attr name="pillRadius" format="float"/>
        <attr name="swipeThreshold" format="float"/>
        <attr name="drawableOffset" format="float"/>

        <attr name="pillSubtext" format="string"/>
        <attr name="pillSubTextColor" format="string"/>
        <attr name="pillSubTextSize" format="dimension"/>
        <attr name="pillSubTextStyle" format="enum">
            <enum name="bold" value="1"/>
            <enum name="normal" value="0"/>
        </attr>

        <attr name="pillMainText" format="string"/>
        <attr name="pillMainTextColor" format="string"/>
        <attr name="pillMainTextSize" format="dimension"/>
        <attr name="pillMainTextStyle" format="enum">
            <enum name="bold" value="1"/>
            <enum name="normal" value="0"/>
        </attr>

        <attr name="contentSubtext" format="string"/>
        <attr name="contentSubTextColor" format="string"/>
        <attr name="contentSubTextSize" format="dimension"/>
        <attr name="contentSubTextStyle" format="enum">
            <enum name="bold" value="1"/>
            <enum name="normal" value="0"/>
        </attr>

        <attr name="contentMainText" format="string"/>
        <attr name="contentMainTextColor" format="string"/>
        <attr name="contentMainTextSize" format="dimension"/>
        <attr name="contentMainTextStyle" format="enum">
            <enum name="bold" value="1"/>
            <enum name="normal" value="0"/>
        </attr>

    </declare-styleable>
</resources>